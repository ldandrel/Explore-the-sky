{% extends 'layouts/default.twig' %}

{% block content %}
<body class="body-space">
    <section class="container-space">
        <!-- Div for the logo -->
        <div class="logo">
            <img src="{{ asset('img/logo_sky.png') }}" alt="Logo of the website">
        </div>
        <!-- Section which contains the city choose by the user and the current date -->
        <section class="user-informations">
            <span class="city">Paris</span>
            <span class="date">Mardi 28 mars 2017</span>
        </section>
        <!-- Section which contains the skymap -->
        <section id="container-skymap"></section>
        <!-- Section which contains the slider -->
        <section class="container-slider">
            <div class="slider">
                <!-- Progress bar of the slider -->
                <div class="slider-progress-bar"></div>
                <!-- Arrow of the slider -->
                <div class="arrow left-arrow"></div>
                <div class="arrow right-arrow"></div>
                <!-- Div which show a part of the slides -->
                <div class="box-slides">
                <!-- Container for all the slides -->
                    <div data-offset="0" class="container-slides">
                        <!-- Slide which contains the name and the button to access constellation's informations -->
                        {% for constellation in constellations %}
                        <div class="slide">
                            <span class="name-constellation">{{ constellation.name }}</span>
                            <button id="{{ constellation.IAU }}" onclick="constellation(id={{ constellation.id }})" data-x="{{ constellation.ra }}" data-y="{{ constellation.declinaison }}" data-id="{{ constellation.id - 1 }}" class="button-constellation"></button>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <!-- Slider's underline -->
                <div class="slider-underline"></div>
            </div>
        </section>
        <!-- Section which contains the slidebar with the constellation's informations -->
        <section class="container-informations">
            <div class="informations">

                <div class="cross"></div>
                <div class="title-constellation">

                </div>
                <div class="informations-navigation">
                    <div class="navigation-bar progress-bar"></div>
                    <div class="navigation-bar"></div>
                    <a href="#" data-index="0" class="navigation navigation-history navigation-active">H</a>
                    <a href="#" data-index="1" class="navigation navigation-environment">E</a>
                    <a href="#" data-index="2" class="navigation navigation-visibility">V</a>
                </div>

                <div class="information-content">

                    <div class="content content-history content-active">

                    </div>

                    <div class="content content-environment">

                    </div>

                    <div class="content content-visibility">

                    </div>
                </div>
                <div class="informations-background">
                </div>
            </div>
        </section>
    </section>

{% endblock %}
